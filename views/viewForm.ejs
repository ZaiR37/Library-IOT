<!DOCTYPE html>
<html>
  <head>
    <title>Book Form</title>
  <style>
    .form {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      height: 100vh;
      width: 50%;
      margin: 0 auto;
    }

      input[type="text"],
      select {
        width: 100%;
        padding: 12px 20px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
        font-size: 16px;
        text-align: center;
      }

    body {
      background-color: #f1f1f1;
    }

    input[type="button"] {
      width: 100%;
      background-color: #4CAF50;
      color: white;
      padding: 14px 20px;
      margin: 8px 0;
      border: none;
      border-radius: 4px;
      cursor: pointer;
    }

    .secondary-button, .backButton {
    background-color: #4CAF50;
    color: white;
    padding: 14px 20px;
    margin: 8px 0;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    }

    .secondary-button:hover, .backButton:hover {
        background-color: #45a049;
    }

  </style>
  </head>
  <body>
    
    <div class="form">
      <button type="button" onclick="getCard()" class="secondary-button">Check for Id Card</button>
      <!-- <input type="text" id="book_id" name="book_id" required readonly> -->
      <input type="text" id="book_id" name="book_id" readonly>
      <br>
      <div id="hidden-form" style="display: none;">
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" readonly>
        <br>
        <label for="category">Category:</label>
        <input type="text" id="category" name="category" readonly>
        <br>
        <label for="author">Author:</label>
        <input type="text" id="author" name="author" readonly>
        <br>
        <label for="publisher">Publisher:</label>
        <input type="text" id="publisher" name="publisher" readonly>
        <br>
        <label for="year_published">Year Published:</label>
        <input type="text" id="year_published" name="year_published" readonly>
        <br>
        <input type="button" onclick="directPage()" value="Edit Data">
      </div>
      <a href="/list"><button type="button" class="backButton">Back to List Page</button></a>
    </div>

    <script>
      function getCard() {
        showForm("hide");
        fetch('/api/id_card')
        .then(response => response.json())
        .then(data => {
          const bookIdInput = document.getElementById('book_id');
          bookIdInput.value = data.id;
          if(data.id > 0){
            showForm("appear");
            getData(data.id);
          }
        });
      }

      function showForm(status) {
        if (status == "hide"){
          document.getElementById("hidden-form").style.display = "none";
        } else {
          document.getElementById("hidden-form").style.display = "block";
        }
      }

      function directPage() {
        let id = document.getElementById("book_id").value;
        window.location.href = `/edit/${id}`;
      }

      function getData(id) {
        fetch(`/api/data/${id}`)
        .then(response => response.json())
        .then(data => {
          document.getElementById("title").value = data[0].title;
          document.getElementById("category").value = data[0].category;
          document.getElementById("author").value = data[0].author;
          document.getElementById("publisher").value = data[0].publisher;
          document.getElementById("year_published").value = data[0].year_published;
        });
      }
    </script>

  </body>
</html>
